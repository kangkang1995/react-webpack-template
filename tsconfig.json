{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es6", "es2015.promise", "es2017"],
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "~*": ["src/*"],
      "@*": ["src/*"]
    }
  },
  "include":["src"],
  "exclude": ["node_modules", "build", "dist"]
}
